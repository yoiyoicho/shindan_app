<%= link_to 'ユーザー新規作成', new_user_path %>
<h1>ログイン</h1>
<%= form_with url: user_sessions_path do |form| %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>